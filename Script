--// Danttx Hub v2
--// Moderno, movible y con Anti-Hit toggle visual
--// Colores: Verde (activo) / Rojo (inactivo)

local player = game.Players.LocalPlayer
local mouse = player:GetMouse()
local gui = script.Parent
local frame = gui:WaitForChild("Frame")

-- Dise√±o general
frame.Size = UDim2.new(0, 250, 0, 150)
frame.Position = UDim2.new(0.5, -125, 0.5, -75)
frame.BackgroundTransparency = 0.3
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true -- Movible en PC y m√≥vil
frame.Visible = true

-- T√≠tulo
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "Danttx Hub"
title.TextColor3 = Color3.fromRGB(255,255,255)
title.TextScaled = true
title.Font = Enum.Font.GothamBold

-- Bot√≥n Anti-Hit
local antiHitBtn = Instance.new("TextButton", frame)
antiHitBtn.Size = UDim2.new(0.8, 0, 0, 40)
antiHitBtn.Position = UDim2.new(0.1, 0, 0.3, 0)
antiHitBtn.BackgroundColor3 = Color3.fromRGB(180, 0, 0) -- Rojo inactivo
antiHitBtn.Text = "üß† Anti-Hit (OFF)"
antiHitBtn.TextColor3 = Color3.fromRGB(255,255,255)
antiHitBtn.Font = Enum.Font.Gotham
antiHitBtn.TextScaled = true
antiHitBtn.AutoButtonColor = true
Instance.new("UICorner", antiHitBtn)

-- Bot√≥n Cerrar
local closeBtn = Instance.new("TextButton", frame)
closeBtn.Size = UDim2.new(0.8, 0, 0, 40)
closeBtn.Position = UDim2.new(0.1, 0, 0.65, 0)
closeBtn.BackgroundColor3 = Color3.fromRGB(40,40,40)
closeBtn.Text = "‚ùå Cerrar"
closeBtn.TextColor3 = Color3.fromRGB(255,255,255)
closeBtn.Font = Enum.Font.Gotham
closeBtn.TextScaled = true
closeBtn.AutoButtonColor = true
Instance.new("UICorner", closeBtn)

-- Bot√≥n Abrir (cuando est√© minimizado)
local minimized = false
local openBtn = Instance.new("TextButton", gui)
openBtn.Size = UDim2.new(0, 100, 0, 40)
openBtn.Position = UDim2.new(0, 20, 0, 20)
openBtn.BackgroundTransparency = 0.3
openBtn.BackgroundColor3 = Color3.fromRGB(20,20,20)
openBtn.Text = "üìÇ Abrir Hub"
openBtn.TextColor3 = Color3.fromRGB(255,255,255)
openBtn.Font = Enum.Font.Gotham
openBtn.TextScaled = true
openBtn.Visible = false
Instance.new("UICorner", openBtn)

closeBtn.MouseButton1Click:Connect(function()
	frame.Visible = false
	openBtn.Visible = true
end)

openBtn.MouseButton1Click:Connect(function()
	frame.Visible = true
	openBtn.Visible = false
end)

-- Evento remoto
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local remote = ReplicatedStorage:FindFirstChild("ActivateAntiHit") or Instance.new("RemoteEvent")
remote.Name = "ActivateAntiHit"
remote.Parent = ReplicatedStorage

-- Estado del Anti-Hit
local antiHitActive = false

-- Funci√≥n para actualizar la apariencia
local function updateAntiHitButton()
	if antiHitActive then
		antiHitBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 0) -- Verde
		antiHitBtn.Text = "üß† Anti-Hit (ON)"
	else
		antiHitBtn.BackgroundColor3 = Color3.fromRGB(180, 0, 0) -- Rojo
		antiHitBtn.Text = "üß† Anti-Hit (OFF)"
	end
end

-- Click para activar/desactivar
antiHitBtn.MouseButton1Click:Connect(function()
	antiHitActive = not antiHitActive
	updateAntiHitButton()

	if antiHitActive then
		remote:FireServer(true)
	else
		remote:FireServer(false)
	end
end)

-- Inicializar color
updateAntiHitButton()
